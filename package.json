{
  "name": "@gargrave/velcrostrip",
  "version": "0.2.0",
  "description": "A modest, general-use React UI component library",
  "author": "Gabe Hargrave <gkhargrave@gmail.com>",
  "repository": "https://github.com/gargrave/velcrostrip",
  "main": "dist/velcrostrip.cjs.js",
  "module": "dist/velcrostrip.esm.js",
  "browser": "dist/velcrostrip.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "clean:dist": "yarn rimraf dist",
    "clean:lib": "yarn rimraf lib",
    "prebuild": "jest && yarn clean:dist && yarn build:lib && yarn build:types",
    "build": "rollup -c",
    "build:lib": "yarn clean:lib && tsc --outDir 'lib'",
    "build:types": "tsc --emitDeclarationOnly",
    "release": "yarn build && yarn np --yolo",
    "lint": "eslint --ext .ts,.tsx ./src",
    "test": "jest --watch",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build"
  },
  "license": "MIT",
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "@emotion/styled": "^10.0.27",
    "polished": "^4.0.1"
  },
  "peerDependencies": {
    "react": "^16.13.0",
    "react-dom": "^16.13.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@types/react": "^16.9.50",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.3.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-emotion": "^10.0.33",
    "css-loader": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-emotion": "^10.0.27",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.21.3",
    "eslint-plugin-react-hooks": "^4.1.2",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "np": "^5.2.1",
    "prettier": "^2.1.2",
    "pretty-quick": "^3.0.2",
    "react": "^16.13.0",
    "react-docgen-typescript": "^1.20.5",
    "react-dom": "^16.13.0",
    "react-styleguidist": "^11.1.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.28.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "style-loader": "^1.3.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
