{
  "name": "@gargrave/velcrostrip",
  "version": "0.0.1",
  "description": "A modest, general-use React UI component library",
  "author": "Gabe Hargrave <gkhargrave@gmail.com>",
  "repository": "https://github.com/gargrave/velcrostrip",
  "main": "dist/velcrostrip.cjs.js",
  "module": "dist/velcrostrip.esm.js",
  "browser": "dist/velcrostrip.umd.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "lib"
  ],
  "scripts": {
    "clean:dist": "yarn rimraf dist",
    "clean:lib": "yarn rimraf lib",
    "prebuild": "jest && yarn clean:dist && yarn build:lib && yarn build:types",
    "build": "rollup -c",
    "build:lib": "yarn clean:lib && tsc --outDir 'lib'",
    "build:types": "tsc --emitDeclarationOnly",
    "release": "yarn build && yarn np --yolo",
    "lint": "eslint --ext .ts,.tsx ./src",
    "test": "jest --watch",
    "styleguide": "styleguidist server"
  },
  "license": "MIT",
  "dependencies": {
    "@gargrave/garlib": "^0.0.5",
    "emotion": "^10.0.27",
    "polished": "^3.5.1",
    "ramda": "^0.27.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.0",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-react": "^7.9.4",
    "@babel/preset-typescript": "^7.9.0",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.1",
    "@types/ramda": "^0.27.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^25.2.3",
    "babel-loader": "^8.1.0",
    "css-loader": "^3.4.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "jest": "^25.2.3",
    "np": "^6.2.0",
    "prettier": "^2.0.2",
    "pretty-quick": "^2.0.1",
    "react-docgen-typescript": "^1.16.3",
    "react-styleguidist": "^11.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.2.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "style-loader": "^1.1.3",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
